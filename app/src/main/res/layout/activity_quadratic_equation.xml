<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuadraticEquationActivity">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="input a,b and c and program will output the discriminant and roots"
        android:textStyle="bold"
        android:textColor="#171616"
        android:textSize="30sp"
        android:background="#fff">

    </TextView>



    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/EditTextA"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="a"
            android:textSize="25sp"
            android:textStyle="bold">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="X^2"
            android:textSize="35sp"
            android:textStyle="italic">

        </TextView>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="35sp"
            android:textStyle="italic">

        </TextView>


        <EditText
            android:id="@+id/EditTextB"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="b"
            android:textSize="25sp"
            android:textStyle="bold">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="X+"
            android:textSize="35sp"
            android:textStyle="italic">

        </TextView>


        <EditText
            android:id="@+id/EditTextC"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="c"
            android:textSize="25sp"
            android:textStyle="bold">
        </EditText>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="=0"
            android:textSize="35sp"
            android:textStyle="italic">

        </TextView>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCalculateQE"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" calculate "
        android:textSize="35sp"
        android:textStyle="bold"
        android:background="#fff">

    </androidx.appcompat.widget.AppCompatButton>


    <TextView
        android:visibility="gone"
        android:id="@+id/discriminantTV"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="D="
        android:textStyle="bold"
        android:textColor="#171616"
        android:textSize="30sp"
        android:background="#fff">
    </TextView>


    <TextView
        android:visibility="gone"
        android:id="@+id/rootsTV"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="x1 x2"
        android:textStyle="bold"
        android:textColor="#171616"
        android:textSize="30sp"
        android:background="#fff">
    </TextView>

</androidx.appcompat.widget.LinearLayoutCompat>